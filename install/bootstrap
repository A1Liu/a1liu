command -v git >/dev/null 2>&1 \
  || { echo >&2 "Script requires git to install config folder, but git is not installed. Aborting."; exit 1; }

if [ -e ~/.aliu_config_installed ]
then
  echo "You've already installed this config somewhere."
  exit 1
else
  git clone https://github.com/A1Liu/config.git
  touch ~/.aliu_config_successful
fi
