#!/bin/bash

# Assumes Git has already been installed
project="$(dirname $0)"
export project="$(dirname "$project")"

# Updating, upgrading
apt dist-upgrade -y
apt update -y
apt upgrade -y
apt autoremove -y

# Pretty useful software
apt install -y \
software-properties-common snapd \
exfat-utils exfat-fuse ntfs-3g \
default-jre default-jdk \
build-essential \
conky-all gcalcli \
python3.6 python2.7 \
vim-gtk firefox xclip

# Z Shell
apt install -y zsh
chsh -s /bin/zsh

curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.35.0/install.sh | bash

source "$project/install/shell"

echo "Running 'rustup' to install the Rust programming langague"
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

apt install haskell-platform
