#!/bin/sh

# Eventually want to not have to connect to the server twice for a single file
sh -c "$(curl -fsSL https://raw.githubusercontent.com/A1Liu/config/master/install/bootstrap)" || exit 1

cd config/
CFG_DIR=`pwd`
cd ..

ln -s "${CFG_DIR}/neovim/init.vim" ~/.vimrc
ln -s "${CFG_DIR}/neovim" ~/.vim
ln -s "${CFG_DIR}/shell/gitconfig" ~/.gitconfig
ln -s "${CFG_DIR}/shell/gitignore_global" ~/.gitignore_global

touch ~/.zshrc
echo "#\!/bin/zsh\n\nsource \"${CFG_DIR}/shell/zshrc\"" > ~/.zshrc
touch ~/.zshenv
echo "#\!/bin/zsh\n\nsource \"${CFG_DIR}/shell/zshenv\"" > ~/.zshenv

# Use VC Profile
mv ~/.profile ~/.profile_old
touch ~/.profile
echo "source \"${CFG_DIR}/shell/profile\"" > ~/.profile
