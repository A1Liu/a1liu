[user]
	email = albertymliu@gmail.com
	name = Albert Liu
[color]
	ui = true
[core]
	excludesfile = ~/.gitignore_global
[pager]
	branch = false
	tag = false
[log]
	graph = true
	oneline = true
[alias]
	l = log --graph --oneline
	co = commit -m
  fwd =  "!f() { \
            git checkout $(git rev-list --topo-order HEAD..\"$*\" | tail -1); \
          }; f"
  back = checkout HEAD~1
	ca = commit --amend -m
  s = status
[push]
	default = simple
[color "status"]
	added = green
	changed = red
	nobranch = red
	untracked = yellow
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
